{
    "name": "Self tracker",
    "version": "1.0",
    "description": "Self tracker",
    "permissions": ["storage", "declarativeContent", "tabs",  
      "activeTab", "notifications"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["chart.js", "popup.js"],
        "css": ["bootstrap.css"] 
      }
    ],
    "manifest_version": 2
  }